<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.kaike.mobilestone.ActivityDoItem">

    <ImageView
        android:id="@+id/fotoImageView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignEnd="@+id/tv_vendedor"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fotoImageView"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="292dp" />


    <TextView
        android:id="@+id/tv_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titulo"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="350dp" />


    <TextView
        android:id="@+id/tv_vendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_valor"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Adicionar Produto"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="464dp"
        android:layout_below="@+id/tv_vendedor"
        android:layout_alignParentStart="true" />


</RelativeLayout>
